{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupSlug": "all-minor-patch"
    },
    {
      "groupName": "HotChocolate",
      "matchPackagePrefixes": [
        "HotChocolate"
      ]
    }
  ]
}